<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Booklist</title>
	<style>
		.book {
			border: 5px solid black;
			display: flex;
			flex-direction: row;
			padding: 2rem;
		}
		img {
			width: 10rem;
			margin: 0 2rem;
		}
	</style>
</head>
<body>
	
	<% books.forEach(book => {%>
		<%- include("./book", {
								img_url: `https://covers.openlibrary.org/b/id/${book.cover_id}-L.jpg`,
								title: book.title,
								authors: book.authors,
								key: book.key,
								port: port,
							}) %>
	<% }); %>
	
</body>
</html>